/[if !IE]>
%html{lang: 'ru', class: 'no-js'}
  /<![endif]
  %head
    %title #{data.page.title || "Новый сайт"}
    %meta(http-equiv="content-type" content="text/html" charset="utf-8")
    %meta(http-equiv="x-ua-compatible" content="ie=edge,chrome=1")
    %meta(name="description" content="ООО Поставка транспорта - лидер в доставке спецтехники из Европы в Россию по низким ценам и полным спектром услуг.")
    %meta(name="keywords" content="Транспорт из европы, Автобетононасосы, Автобетоносмесители, Автобусы, Автоцистерны, Фуры, Скания, Фургоны для перевозок, спецтехника, автоспецтехника")
    %link{href: "/favicon.ico", rel: "shortcut icon", type: "image/vnd.microsoft.icon"}

    -# Stylesheets
    = stylesheet_link_tag 'application'
  %body{class: current_page.data.body_class || 'page'}
    = yield
    -# Javascripts
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/modernizr/2.7.1/modernizr.min.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js'
    %script{src: "https://maps.googleapis.com/maps/api/js?key=AIzaSyC0V9cq80Itq35ghB14T3Mgkem_YcPANjg&sensor=false&language=ru", type: "text/javascript"}
    = javascript_include_tag 'application'
    :javascript
      function initialize() {
        var myLatlng = new google.maps.LatLng(54.693132,20.468084);
        var mapOptions = {
          zoom: 16,
          center: myLatlng
        }
        var map = new google.maps.Map(document.getElementById('j-google-map'), mapOptions);

        var marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            title: 'Поставка транспорта!'
        });

      }

      google.maps.event.addDomListener(window, 'load', initialize);
